      <path d="M76 88H24c-6.6 0-12-5.4-12-12V24c0-6.6 5.4-12 12-12h52c6.6 0 12 5.4 12 12v52c0 6.6-5.4 12-12 12z" fill="none" stroke="#2B2B2B" stroke-width="5" stroke-miterlimit="10"/>
